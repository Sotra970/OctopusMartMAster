<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmed.octopusmart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App.Appcontroler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.CategoryActivity"
            android:theme="@style/AppTheme.Category" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.Translucent" />
        <activity android:name=".Activity.SplashActivity" />
        <activity android:name=".Activity.AllReviewsActivity" />
        <activity android:name=".Activity.AllSpecsActivity" />
        <activity android:name=".Activity.ChangePhoneActivity" />
        <activity android:name=".Activity.SettingsActivity" />
        <activity android:name=".Activity.ChooseAddressActivity" />
        <activity android:name=".Activity.EmailChangeActivity" />
        <activity
            android:name=".Activity.ProductDetailsActivity"
            android:theme="@style/AppTheme.Transparent.ProductDetails"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.OrderCaseActivity" />
        <activity android:name=".Activity.PasswordActivity" />
        <activity android:name=".Activity.OrderStateDetailsActivity"></activity>
    </application>

</manifest>