<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>


    <style name="AppTheme.Category">

    </style>

    <style name="AppTheme.Transparent.ProductDetails">


    </style>

    <!--<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="text_bold">
        <item name="fontPath">fonts/HelveticaNeueLT B.otf</item>
    </style>


    <style name="text_normal">
        <item name="fontPath">fonts/HelveticaNeueLT.otf</item>
    </style>

    <style name="RatingBarIndicator" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>


    <style name="AppTheme.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Transparent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="file_picker_theme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="signup_edit_text" parent="text_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <style name="product_detail_field_info">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="product_detail_field_title" parent="text_bold">

        <!--<item name="android:textColor">@color/grey_900</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="product_detail_field_layout">
        <item name="android:padding">8dp</item>
    </style>

    <style name="product_detail_card_title" parent="text_bold">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="product_info_separator">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="show_more" parent="text_bold">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="product_details_card">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="dialog_footer">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="rating" parent="@style/Widget.MaterialRatingBar.RatingBar">
        <item name="mrb_progressTint">@color/yellow_700</item>
        <item name="mrb_fillBackgroundStars">false</item>
    </style>

    <style name="input">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="field">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!--<style name="input_layout">-->
    <!--</style>-->
    <!---->
    <style name="input_text" parent="text_normal">
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/mid_text_size</item>


    </style>

    <style name="input_text_pass" parent="input_text">
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="hint">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="history_style" parent="text_bold">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

</resources>
