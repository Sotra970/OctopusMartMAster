<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.ahmed.octopusmart.View.Widget.SquareRelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/mobile"
                    android:id="@+id/mobile_img"
                    android:adjustViewBounds="true"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:background="@drawable/accent_circle_shape"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:id="@+id/sale_text"
                    android:text="20%"
                    android:textSize="@dimen/smal_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </FrameLayout>

        </com.example.ahmed.octopusmart.View.Widget.SquareRelativeLayout>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/product_rate"
            android:layout_marginTop="6dp"
            android:numStars="5"
            android:isIndicator="false"
            android:rating="3.5"
            android:stepSize="0.5"
            android:layout_gravity="center"
            style="@style/RatingBarIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/mobile_name"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy_title"
            android:textColor="@color/black"
            android:textSize="@dimen/mid_text_size" />


        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_dumm"
                style="@style/text_bold"
                android:id="@+id/price"
                android:textSize="@dimen/mid_text_size"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:layout_gravity="bottom"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/price_before"
                android:textSize="@dimen/smal_text_size"
                android:text="@string/dump_price1"
                android:textColor="@color/grey_700"
                />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
