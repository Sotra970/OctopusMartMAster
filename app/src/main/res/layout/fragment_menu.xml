<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/top_rad">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    app:tabPadding="0dp"
                    app:tabTextAppearance="@style/TextAppearance.AppCompat.Small">

                </android.support.design.widget.TabLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/user_img_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/user_img"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_account_circle_black_48dp" />

                                <FrameLayout
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/user_name_text"
                                        style="@style/text_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/user_name_dumm"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/mid_text_size" />

                                </FrameLayout>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
                                android:tint="@color/grey_600" />


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">


                                <LinearLayout

                                    android:id="@+id/share_app_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView

                                            android:id="@+id/share_app_img"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_share_black_48dp"
                                            android:tint="@color/colorPrimary" />


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/share_app_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/share_app_text"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/smal_text_size" />

                                </LinearLayout>


                                <LinearLayout

                                    android:id="@+id/track_order_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                            <FrameLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <View

                                                    android:id="@+id/track_order_img_shared"
                                                    android:layout_gravity="center"
                                                    android:background="@drawable/white_radius"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"/>
                                                <ImageView

                                                    android:id="@+id/track_order_img"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:src="@drawable/ic_track_changes_black_48dp"
                                                    android:tint="@color/colorPrimary" />

                                            </FrameLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/track_order_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/track_order_text"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/smal_text_size" />

                                </LinearLayout>


                                <LinearLayout

                                    android:id="@+id/history_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <View
                                                android:id="@+id/history_img_shared"
                                                android:layout_gravity="center"
                                                android:background="@drawable/white_radius"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"/>
                                                <ImageView
                                                    android:id="@+id/history_img"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:src="@drawable/ic_history_black_48dp"
                                                    android:tint="@color/colorPrimary" />

                                        </FrameLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/history_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/history_text"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/smal_text_size" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <android.support.v7.widget.RecyclerView
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:id="@+id/menu_categories_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/settings_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/settings_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_settings_black_48dp"
                                android:tint="@color/colorPrimary" />


                            <TextView
                                android:id="@+id/settings_text"
                                style="@style/text_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/settings_text"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/mid_text_size" />


                            <ImageView
                                android:id="@+id/settings_arrow_left"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
                                android:tint="@color/grey_600" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/profile_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/profile_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_account_circle_black_48dp"
                                android:tint="@color/grey_600" />


                            <TextView
                                android:id="@+id/profile_text"

                                style="@style/text_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:scrollbarSize="@dimen/large_text_size"
                                android:text="@string/profile_text"
                                android:textColor="@color/grey_900"
                                android:textSize="@dimen/mid_text_size" />


                            <ImageView
                                android:id="@+id/profile_arrow_left"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
                                android:tint="@color/grey_600" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/logout_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/logout_text"
                            style="@style/text_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/logout_text"
                            android:textColor="@color/grey_900"
                            android:textSize="@dimen/mid_text_size" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>