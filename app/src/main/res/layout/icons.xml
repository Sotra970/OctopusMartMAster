<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/categories_img"
                android:layout_gravity="center|left"
                android:padding="12dp"
                android:background="@drawable/circle_shape_red"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/white"
                android:src="@drawable/shirt"

                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/brands_img"
                android:layout_gravity="center|left"
                android:padding="12dp"
                android:background="@drawable/circle_shape_purple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/white"
                android:src="@drawable/shirt"

                />


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/coins_coupons_img"
                    android:layout_gravity="center|left"
                    android:padding="12dp"
                    android:background="@drawable/circle_shape_yellow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/white"
                    android:src="@drawable/shirt"

                    />


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/freebies_reviews_img"
                    android:layout_gravity="center|left"
                    android:background="@drawable/circle_shape_green"
                    android:padding="12dp"
                    android:src="@drawable/television"
                    android:tint="@color/white"

                    />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/buyers_img"
                    android:layout_gravity="center|left"
                    android:padding="12dp"
                    android:background="@drawable/circle_shape_cyan"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/white"
                    android:src="@drawable/all"
                    />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categories_text"
            android:textSize="@dimen/smal_text_size"
            android:text="@string/english_categories_text"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brands_text"
            android:textSize="@dimen/smal_text_size"
            android:text="@string/brands_text"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coins_coupons_text"
            android:textSize="@dimen/smal_text_size"
            android:text="@string/coins_coupons_text"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/freebies_reviews_text"
            android:textSize="@dimen/smal_text_size"
            android:text="@string/freebies_reviews_text"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buyers_text"
            android:textSize="@dimen/smal_text_size"
            android:text="@string/buyers"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>