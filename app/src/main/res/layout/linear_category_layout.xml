<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="4dp"
    android:layout_gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:id="@+id/electronics_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/menu_category_item_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:src="@drawable/television"
                android:tint="@color/colorPrimary"

                />
        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/menu_category_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_bold"
            android:gravity="center"
            android:text="@string/electronics_text"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/smal_text_size" />

    </LinearLayout>
</android.support.v7.widget.CardView>