<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="168dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="4dp"
                android:src="@drawable/clothes"
                android:id="@+id/cloth_img"
                android:adjustViewBounds="true"
                android:layout_height="156dp" />
            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:id="@+id/sale_text"
                android:text="20%"
                android:textSize="@dimen/smal_text_size"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/accent_circle_shape"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سوتشيرت رجالي أحمر"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:id="@+id/clothes_name"
             />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/dark_blue">
            <View
                android:layout_width="42dp"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center|left"
                android:background="@color/gray200"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_before"
                android:textSize="10dp"
                android:layout_gravity="center|left"
                android:text="15000 جنيه"
                android:textColor="@color/gray200"
                android:layout_marginLeft="4dp"

                />
            <TextView
                fontPath="fonts/HelveticaNeueLT.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000 جنيه"
                android:textSize="@dimen/mid_text_size"
                android:textStyle="bold"
                android:id="@+id/price"
                android:layout_marginRight="4dp"
                android:textColor="@color/orange"
                android:layout_gravity="center|right"
                tools:ignore="MissingPrefix" />

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
