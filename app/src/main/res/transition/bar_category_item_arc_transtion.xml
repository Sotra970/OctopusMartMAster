<?xml version="1.0" encoding="utf-8"?>
    <transitionSet
        android:transitionOrdering="together"
        android:duration="300"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

            <transition
                class="com.example.ahmed.octopusmart.Utils.transition.LiftOff"
                android:elevation="2dp" />
            <targets>
                <target android:targetId="@id/bar_category_item" />
            </targets>
        </transitionSet>

        <changeBounds
            xmlns:android="http://schemas.android.com/apk/res/android">
            <pathMotion

                class="com.example.ahmed.octopusmart.Utils.transition.GravityArcMotion"
                android:maximumAngle="90" />
        </changeBounds>

    </transitionSet>